<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context="ForgotPassword">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tvLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans"
        android:text="Reset Password"
        android:textColor="@color/skyblue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main LinearLayout to hold Email and OTP Inputs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvLogIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <!-- Email Input -->
            <EditText
                android:id="@+id/etForgotEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Email"
                android:background="@drawable/round_edit_text"
                android:drawablePadding="15dp"
                android:fontFamily="@font/opensans"
                android:hint="Email"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15sp" />

            <!-- OTP Input (Initially hidden) -->
            <EditText
                android:id="@+id/etOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autofillHints="OTP"
                android:background="@drawable/round_edit_text"
                android:drawablePadding="15dp"
                android:fontFamily="@font/opensans"
                android:hint="OTP"
                android:inputType="number"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15sp"
                android:visibility="gone" /> <!-- Hidden initially -->

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autofillHints="New Password"
                android:background="@drawable/round_edit_text"
                android:drawablePadding="15dp"
                android:fontFamily="@font/opensans"
                android:hint="New Password"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15sp"
                android:visibility="gone"/> <!-- Initially hidden -->

            <EditText
                android:id="@+id/etConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autofillHints="Confirm New Password"
                android:background="@drawable/round_edit_text"
                android:drawablePadding="15dp"
                android:fontFamily="@font/opensans"
                android:hint="Confirm New Password"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="15sp"
                android:visibility="gone" /> <!-- Initially hidden -->

            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans"
                android:backgroundTint="@color/skyblue"
                android:text="Reset Password"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" /><!-- Initially hidden -->


        </LinearLayout>

        <!-- Send OTP Button -->
        <Button
            android:id="@+id/btnOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            android:backgroundTint="@color/skyblue"
            android:text="Send OTP"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Verify OTP Button (Initially hidden) -->
        <Button
            android:id="@+id/btnVerifyOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            android:backgroundTint="@color/skyblue"
            android:text="Verify OTP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" /> <!-- Hidden initially -->

        <!-- Resend OTP (Initially hidden) -->
        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:visibility="gone" /> <!-- Hidden initially -->

        <!-- Retry Message (Initially hidden) -->
        <TextView
            android:id="@+id/tvRetryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrying to send OTP..."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:visibility="gone" /> <!-- Hidden initially -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
